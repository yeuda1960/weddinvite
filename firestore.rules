rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Guests collection - allow RSVP submissions
    match /guests/{guestId} {
      // Allow anyone to read guest data (needed for RSVP form)
      allow read: if true;
      // Allow anyone to create or update their RSVP data
      allow write: if true;
    }
    
    // Statistics collection - read only for dashboard
    match /statistics/{statId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
